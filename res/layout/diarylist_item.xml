<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_darkbg"
    android:orientation="horizontal" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:shrinkColumns="0" >

        <TableRow>

            <TextView
                android:id="@+id/diary_name_title"
                style="@style/normal_light_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diary_title" />

            <TextView
                android:id="@+id/my_diary_name"
                style="@style/normal_light_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/diary_date_title"
                style="@style/normal_light_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diary_date_title" />

            <TextView
                android:id="@+id/my_diary_date"
                style="@style/normal_light_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

</LinearLayout>