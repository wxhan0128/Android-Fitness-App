<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="inputedit_style">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="long_inputedit_style">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:maxLength">300</item>
        <item name="android:maxLines">30</item>
    </style>

    <style name="inputnumber_style">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="inputspinner_style">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:maxLength">15</item>
    </style>

</resources>