<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 定义一个样式，指定字体大小、字体颜色 -->
    <style name="normal_light_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="super_light_text_style" parent="normal_light_text_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="big_light_text_style" parent="normal_light_text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="little_light_text_style" parent="normal_light_text_style">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 定义一个样式，继承前一个颜色 -->
    <style name="normal_dark_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="super_dark_text_style" parent="normal_dark_text_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="big_dark_text_style" parent="normal_dark_text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="little_dark_text_style" parent="normal_dark_text_style">
        <item name="android:textSize">14sp</item>
    </style>

</resources>